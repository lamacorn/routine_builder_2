<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All customer concerns
    </h1>

    <a href="/customer_concerns/new" class="btn btn-block btn-outline-secondary">
      Add a new customer concern
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Concern
        </th>

        <th>
          Customer
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @customer_concerns.each do |customer_concern| %>
      <tr>
        <!-- Display customer_concern.id start -->
        <td>
          <%= customer_concern.id %>
        </td>
        <!-- Display customer_concern.id end -->

        <!-- Display customer_concern.concern_id start -->
        <td>
          <%= customer_concern.concern.name %>
        </td>
        <!-- Display customer_concern.concern_id end -->

        <!-- Display customer_concern.customer_id start -->
        <td>
          <%= customer_concern.customer.email %>
        </td>
        <!-- Display customer_concern.customer_id end -->

        <!-- Display customer_concern.created_at start -->
        <td>
          <%= time_ago_in_words(customer_concern.created_at) %> ago
        </td>
        <!-- Display customer_concern.created_at end -->

        <!-- Display customer_concern.updated_at start -->
        <td>
          <%= time_ago_in_words(customer_concern.updated_at) %> ago
        </td>
        <!-- Display customer_concern.updated_at end -->

        <td>
          <a href="/customer_concerns/<%= customer_concern.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
