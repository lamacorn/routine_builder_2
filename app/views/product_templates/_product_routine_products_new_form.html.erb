<!-- Form routine_product start -->
<form action="/create_routine_product_from_product" method="post">
<!-- Form routine_product end -->

  <!-- Label and input for routine_id start -->
  <div class="form-group">
    <label for="routine_id">
      Routine
    </label>

    <!-- Input for routine_id start -->
    <input type="text" id="routine_id" name="routine_id" class="form-control" value="<%= @routine_product.routine_id %>">
    <!-- Input for routine_id end -->
  </div>
  <!-- Label and input for routine_id end -->

  <!-- Label and input for product_id start -->
  <!-- Input for product_id start -->
  <input type="hidden" name="product_id" value="<%= @product.id %>">
  <!-- Input for product_id end -->

  <!-- Label and input for use_frequency_id start -->
  <div class="form-group">
    <label for="use_frequency_id">
      Use frequency
    </label>

    <!-- Input for use_frequency_id start -->
    <input type="text" id="use_frequency_id" name="use_frequency_id" class="form-control" value="<%= @routine_product.use_frequency_id %>">
    <!-- Input for use_frequency_id end -->
  </div>
  <!-- Label and input for use_frequency_id end -->

  <!-- Label and input for note start -->
  <div class="form-group">
    <label for="note">
      Note
    </label>

    <!-- Input for note start -->
    <textarea id="note" name="note" class="form-control" rows="3"><%= @routine_product.note %></textarea>
    <!-- Input for note end -->
  </div>
  <!-- Label and input for note end -->

  <button class="btn btn-block btn-outline-secondary">
    Create routine product
  </button>
</form>
