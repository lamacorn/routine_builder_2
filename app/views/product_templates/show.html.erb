<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Product #<%= @product.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/products" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link product start -->
      <div class="col">
        <a href="/products/<%= @product.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit product
        </a>
      </div>
      <!-- Edit link product end -->

      <!-- Delete link product start -->
      <div class="col">
        <a href="/delete_product/<%= @product.id %>" class="btn btn-block btn-outline-secondary">
          Delete product
        </a>
      </div>
      <!-- Delete link product end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @product.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Category
      </dt>
      <!-- Display category_id start -->
      <dd>
        <% if @product.category.present? %>
          <a href="/categories/<%= @product.category_id %>">
            <%= @product.category.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display category_id end -->

      <dt>
        Average price
      </dt>
      <!-- Display average_price start -->
      <dd>
        <%= @product.average_price %>
      </dd>
      <!-- Display average_price end -->

      <dt>
        Product image
      </dt>
      <!-- Display product_image start -->
      <dd>
        <img src="<%= @product.product_image %>" class="img-fluid">
      </dd>
      <!-- Display product_image end -->

      <dt>
        Purchase link
      </dt>
      <!-- Display purchase_link start -->
      <dd>
        <%= @product.purchase_link %>
      </dd>
      <!-- Display purchase_link end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@product.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@product.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "product_templates/product_routine_products" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "product_templates/product_product_concerns" %>
  </div>
</div>
<!-- Show Page Customization end -->
