<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All products
    </h1>

    <a href="/products/new" class="btn btn-block btn-outline-secondary">
      Add a new product
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Category
        </th>

        <th>
          Average price
        </th>

        <th>
          Product image
        </th>

        <th>
          Purchase link
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @products.each do |product| %>
      <tr>
        <!-- Display product.id start -->
        <td>
          <%= product.id %>
        </td>
        <!-- Display product.id end -->

        <!-- Display product.name start -->
        <td>
          <%= product.name %>
        </td>
        <!-- Display product.name end -->

        <!-- Display product.category_id start -->
        <td>
          <%= product.category.name %>
        </td>
        <!-- Display product.category_id end -->

        <!-- Display product.average_price start -->
        <td>
          <%= product.average_price %>
        </td>
        <!-- Display product.average_price end -->

        <!-- Display product.product_image start -->
        <td>
          <img src='<%= product.product_image %>' class='img-fluid'>
        </td>
        <!-- Display product.product_image end -->

        <!-- Display product.purchase_link start -->
        <td>
          <%= product.purchase_link %>
        </td>
        <!-- Display product.purchase_link end -->

        <!-- Display product.created_at start -->
        <td>
          <%= time_ago_in_words(product.created_at) %> ago
        </td>
        <!-- Display product.created_at end -->

        <!-- Display product.updated_at start -->
        <td>
          <%= time_ago_in_words(product.updated_at) %> ago
        </td>
        <!-- Display product.updated_at end -->

        <td>
          <a href="/products/<%= product.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
