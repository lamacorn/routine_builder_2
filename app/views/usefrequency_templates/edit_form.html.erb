<h1>
  Edit usefrequency #<%= @usefrequency.id %>
</h1>

<hr>

<!-- Form usefrequency start -->
<form action="/update_usefrequency/<%= @usefrequency.id %>" method="post">
<!-- Form usefrequency end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @usefrequency.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Update usefrequency
  </button>
</form>

<hr>

<a href="/usefrequencies">
  Go back
</a>
