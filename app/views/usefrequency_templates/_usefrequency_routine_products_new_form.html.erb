<form action="/create_routine_product_from_usefrequency" method="post">

  <div class="form-group">
    <label for="routine_id">
      Routine
    </label>

    <%= select_tag(:routine_id, options_from_collection_for_select(Routine.all, :id, :customer_id, @routine_product.routine_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="product_id">
      Product
    </label>

    <%= select_tag(:product_id, options_from_collection_for_select(Product.all, :id, :name, @routine_product.product_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="use_frequency_id" value="<%= @usefrequency.id %>">

  <div class="form-group">
    <label for="note">
      Note
    </label>

    <textarea id="note" name="note" class="form-control" rows="3"><%= @routine_product.note %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create routine product
  </button>
</form>
