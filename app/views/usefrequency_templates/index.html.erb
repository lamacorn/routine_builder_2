<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All usefrequencies
    </h1>

    <a href="/usefrequencies/new" class="btn btn-block btn-outline-secondary">
      Add a new usefrequency
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "usefrequency_templates/usefrequencies_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @usefrequencies.each do |usefrequency| %>
      <tr>
        <td>
          <%= usefrequency.id %>
        </td>

        <td>
          <%= usefrequency.description %>
        </td>

        <td>
          <%= time_ago_in_words(usefrequency.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(usefrequency.updated_at) %> ago
        </td>

        <td>
          <a href="/usefrequencies/<%= usefrequency.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @usefrequencies, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
