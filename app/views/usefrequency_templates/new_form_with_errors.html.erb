<!-- Validation failure messages -->
<% if @usefrequency.present? %>
  <% if @usefrequency.errors.any? %>
    <% @usefrequency.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new usefrequency
</h1>


<hr>

<!-- Form usefrequency start -->
<form action="/create_usefrequency" method="post">
<!-- Form usefrequency end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @usefrequency.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Create usefrequency
  </button>
</form>

<hr>

<a href="/usefrequencies">
  Go back
</a>
