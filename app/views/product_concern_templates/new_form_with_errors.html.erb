<% if @product_concern.present? %>
  <% if @product_concern.errors.any? %>
    <% @product_concern.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new product concern
</h1>


<hr>

<form action="/create_product_concern" method="post">

  <div class="form-group">
    <label for="concern_id">
      Concern
    </label>

    <%= select_tag(:concern_id, options_from_collection_for_select(Concern.all, :id, :name, @product_concern.concern_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="product_id">
      Product
    </label>

    <%= select_tag(:product_id, options_from_collection_for_select(Product.all, :id, :name, @product_concern.product_id), :class => "form-control") %>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="good_for">
    <input id="good_for" class="form-check-input" name="good_for" type="checkbox" <%= "checked" if @product_concern.good_for %>>
    <label for="good_for" class="form-check-label">
      Good for
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create product concern
  </button>
</form>

<hr>

<a href="/product_concerns">
  Go back
</a>
