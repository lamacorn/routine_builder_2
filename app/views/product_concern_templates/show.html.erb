<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Product concern #<%= @product_concern.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/product_concerns" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/product_concerns/<%= @product_concern.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit product concern
        </a>
      </div>

      <div class="col">
        <a href="/delete_product_concern/<%= @product_concern.id %>" class="btn btn-block btn-outline-secondary">
          Delete product concern
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Concern
      </dt>
      <dd>
        <% if @product_concern.concern.present? %>
          <a href="/concerns/<%= @product_concern.concern_id %>">
            <%= @product_concern.concern.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Product
      </dt>
      <dd>
        <% if @product_concern.product.present? %>
          <a href="/products/<%= @product_concern.product_id %>">
            <%= @product_concern.product.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Good for
      </dt>
      <dd>
        <%= @product_concern.good_for %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@product_concern.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@product_concern.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

