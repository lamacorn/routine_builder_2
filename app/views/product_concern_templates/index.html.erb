<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All product concerns
    </h1>

    <a href="/product_concerns/new" class="btn btn-block btn-outline-secondary">
      Add a new product concern
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "product_concern_templates/product_concerns_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Concern
        </th>

        <th>
          Product
        </th>

        <th>
          Good for
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @product_concerns.each do |product_concern| %>
      <tr>
        <td>
          <%= product_concern.id %>
        </td>

        <td>
          <% if product_concern.concern.present? %>
            <a href="/concerns/<%= product_concern.concern.id %>">
              <%= product_concern.concern.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if product_concern.product.present? %>
            <a href="/products/<%= product_concern.product.id %>">
              <%= product_concern.product.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= product_concern.good_for %>
        </td>

        <td>
          <%= time_ago_in_words(product_concern.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(product_concern.updated_at) %> ago
        </td>

        <td>
          <a href="/product_concerns/<%= product_concern.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @product_concerns, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
