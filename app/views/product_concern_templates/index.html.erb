<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All product concerns
    </h1>

    <a href="/product_concerns/new" class="btn btn-block btn-outline-secondary">
      Add a new product concern
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Concern
        </th>

        <th>
          Product
        </th>

        <th>
          Good for
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @product_concerns.each do |product_concern| %>
      <tr>
        <!-- Display product_concern.id start -->
        <td>
          <%= product_concern.id %>
        </td>
        <!-- Display product_concern.id end -->

        <!-- Display product_concern.concern_id start -->
        <td>
          <%= product_concern.concern.name %>
        </td>
        <!-- Display product_concern.concern_id end -->

        <!-- Display product_concern.product_id start -->
        <td>
          <%= product_concern.product_id %>
        </td>
        <!-- Display product_concern.product_id end -->

        <!-- Display product_concern.good_for start -->
        <td>
          <%= product_concern.good_for %>
        </td>
        <!-- Display product_concern.good_for end -->

        <!-- Display product_concern.created_at start -->
        <td>
          <%= time_ago_in_words(product_concern.created_at) %> ago
        </td>
        <!-- Display product_concern.created_at end -->

        <!-- Display product_concern.updated_at start -->
        <td>
          <%= time_ago_in_words(product_concern.updated_at) %> ago
        </td>
        <!-- Display product_concern.updated_at end -->

        <td>
          <a href="/product_concerns/<%= product_concern.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
