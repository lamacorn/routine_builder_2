<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Routines

    <a data-toggle="collapse" href="#customer_routines_new_form">
      Add routine
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @customer.routines.each do |routine| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/routines/<%= routine.id %>">
          <%= routine.customer_id %>
        </a>

        <a href="/delete_routine_from_customer/<%= routine.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="customer_routines_new_form">
        <%= render partial: "customer_templates/customer_routines_new_form" %>
      </div>
    </div>

  </ul>
</div>
