<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All customers
    </h1>

    <a href="/customers/new" class="btn btn-block btn-outline-secondary">
      Add a new customer
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "customer_templates/customers_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "customer_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Firstname
        </th>

        <th>
          Lastname
        </th>

        <th>
          Profile photo
        </th>

        <th>
          Birthday
        </th>

        <th>
          Address street
        </th>

        <th>
          Address city
        </th>

        <th>
          Address state
        </th>

        <th>
          Address zipcode
        </th>

        <th>
          Notes
        </th>

        <th>
          Optin email
        </th>

        <th>
          Optin texts
        </th>

        <th>
          Phone
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= customer.id %>
        </td>

        <td>
          <%= customer.email %>
        </td>

        <td>
          <%= customer.firstname %>
        </td>

        <td>
          <%= customer.lastname %>
        </td>

        <td>
          <img src='<%= customer.profile_photo %>' class='img-fluid'>
        </td>

        <td>
          <%= customer.birthday %>
        </td>

        <td>
          <%= customer.address_street %>
        </td>

        <td>
          <%= customer.address_city %>
        </td>

        <td>
          <%= customer.address_state %>
        </td>

        <td>
          <%= customer.address_zipcode %>
        </td>

        <td>
          <%= customer.notes %>
        </td>

        <td>
          <%= customer.optin_email %>
        </td>

        <td>
          <%= customer.optin_texts %>
        </td>

        <td>
          <%= customer.phone %>
        </td>

        <td>
          <%= time_ago_in_words(customer.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(customer.updated_at) %> ago
        </td>

        <td>
          <a href="/customers/<%= customer.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @customers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
