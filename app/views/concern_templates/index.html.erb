<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All concerns
    </h1>

    <a href="/concerns/new" class="btn btn-block btn-outline-secondary">
      Add a new concern
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Example photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @concerns.each do |concern| %>
      <tr>
        <!-- Display concern.id start -->
        <td>
          <%= concern.id %>
        </td>
        <!-- Display concern.id end -->

        <!-- Display concern.name start -->
        <td>
          <%= concern.name %>
        </td>
        <!-- Display concern.name end -->

        <!-- Display concern.description start -->
        <td>
          <%= concern.description %>
        </td>
        <!-- Display concern.description end -->

        <!-- Display concern.example_photo start -->
        <td>
          <img src='<%= concern.example_photo %>' class='img-fluid'>
        </td>
        <!-- Display concern.example_photo end -->

        <!-- Display concern.created_at start -->
        <td>
          <%= time_ago_in_words(concern.created_at) %> ago
        </td>
        <!-- Display concern.created_at end -->

        <!-- Display concern.updated_at start -->
        <td>
          <%= time_ago_in_words(concern.updated_at) %> ago
        </td>
        <!-- Display concern.updated_at end -->

        <td>
          <a href="/concerns/<%= concern.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @concerns, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
