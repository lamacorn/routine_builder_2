<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Example photo
        </th>

        <th>
        </th>
      </tr>

      <% @concerns.each do |concern| %>
      <tr>

        <td>
          <%= concern.name %>
        </td>

        <td>
          <%= concern.description %>
        </td>

        <td>
          <img src='<%= concern.example_photo %>' class='img-fluid'>
        </td>


        <td>
          <a href="/concerns/<%= concern.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @concerns, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
