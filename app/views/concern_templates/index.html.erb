<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All concerns
    </h1>

    <a href="/concerns/new" class="btn btn-block btn-outline-secondary">
      Add a new concern
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "concern_templates/concerns_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Example photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @concerns.each do |concern| %>
      <tr>
        <td>
          <%= concern.id %>
        </td>

        <td>
          <%= concern.name %>
        </td>

        <td>
          <%= concern.description %>
        </td>

        <td>
          <img src='<%= concern.example_photo %>' class='img-fluid'>
        </td>

        <td>
          <%= time_ago_in_words(concern.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(concern.updated_at) %> ago
        </td>

        <td>
          <a href="/concerns/<%= concern.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @concerns, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
