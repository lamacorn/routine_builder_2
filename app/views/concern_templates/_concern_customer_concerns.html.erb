<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Customers with this Concern

    <a data-toggle="collapse" href="#concern_customer_concerns_new_form">
      Add customer concern
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @concern.customer_concerns.each do |customer_concern| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">

        <a href="/customers/<%= customer_concern.customer.id %>">
          <%= customer_concern.customer.firstname %> <%= customer_concern.customer.lastname %>
        </a>

        <a href="/delete_customer_concern_from_concern/<%= customer_concern.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="concern_customer_concerns_new_form">
        <%= render partial: "concern_templates/concern_customer_concerns_new_form" %>
      </div>
    </div>

  </ul>
</div>
