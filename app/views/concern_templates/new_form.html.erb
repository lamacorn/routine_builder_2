<h1>
  Add a new concern
</h1>


<hr>

<!-- Form concern start -->
<form action="/create_concern" method="post" enctype="multipart/form-data">
<!-- Form concern end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for example_photo start -->
  <div class="form-group">
    <label for="example_photo">
      Example photo
    </label>

    <!-- Input for example_photo start -->
    <input type="file" id="example_photo" name="example_photo" class="form-control">
    <!-- Input for example_photo end -->
  </div>
  <!-- Label and input for example_photo end -->

  <button class="btn btn-block btn-outline-secondary">
    Create concern
  </button>
</form>

<hr>

<a href="/concerns">
  Go back
</a>
