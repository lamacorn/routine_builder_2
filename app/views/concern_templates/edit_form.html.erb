<h1>
  Edit concern #<%= @concern.id %>
</h1>

<hr>

<!-- Form concern start -->
<form action="/update_concern/<%= @concern.id %>" method="post" enctype="multipart/form-data">
<!-- Form concern end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @concern.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @concern.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for example_photo start -->
  <div class="form-group">
    <label for="example_photo">
      Example photo
    </label>

    <!-- Input for example_photo start -->
    <%= cl_image_tag(@concern.example_photo.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="example_photo" name="example_photo" class="form-control">
    <!-- Input for example_photo end -->
  </div>
  <!-- Label and input for example_photo end -->

  <button class="btn btn-block btn-outline-secondary">
    Update concern
  </button>
</form>

<hr>

<a href="/concerns">
  Go back
</a>
