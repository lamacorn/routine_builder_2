<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Product Concerns

    <a data-toggle="collapse" href="#concern_product_concerns_new_form">
      Add product concern
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @concern.product_concerns.each do |product_concern| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/product_concerns/<%= product_concern.id %>">
          <%= product_concern.concern_id %>
        </a>

        <a href="/delete_product_concern_from_concern/<%= product_concern.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="concern_product_concerns_new_form">
        <%= render partial: "concern_templates/concern_product_concerns_new_form" %>
      </div>
    </div>

  </ul>
</div>
