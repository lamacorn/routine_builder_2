<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @category.name %> Category Details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/categories" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/categories/<%= @category.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit category
        </a>
      </div>

      <div class="col">
        <a href="/delete_category/<%= @category.id %>" class="btn btn-block btn-outline-secondary">
          Delete category
        </a>
      </div>
    </div>

  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "category_templates/category_products" %>
  </div>
</div>
