<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Name
        </th>
        
        <th>
          Number of Products
        </th>

        <th>
        </th>
      </tr>

      <% @categories.each do |category| %>
      <tr>
        <td>
          <%= category.name.pluralize %>
        </td>
        
        <td>
          <%= category.product_count %>
        </td>

        <td>
          <a href="/categories/<%= category.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @categories, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
