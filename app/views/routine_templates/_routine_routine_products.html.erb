<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Routine Products & Steps

    <a data-toggle="collapse" href="#routine_routine_products_new_form">
      Add a product step
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @routine.routine_products.each do |routine_product| %>
      <!--<li class="list-group-item d-flex align-items-center justify-content-between">-->
        <li class="list-group-item ">
          <a href="/products/<%= routine_product.product_id %>">
          <%= routine_product.productname %> </a>
        
        <ul>
        <li>Use: <%= routine_product.frequency %></li>
        <li>Note: <%= routine_product.note %></li>

        </ul>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="routine_routine_products_new_form">
        <%= render partial: "routine_templates/routine_routine_products_new_form" %>
      </div>
    </div>

  </ul>
</div>
