<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All routines
    </h1>

    <a href="/routines/new" class="btn btn-block btn-outline-secondary">
      Add a new routine
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "routine_templates/routines_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Customer
        </th>

        <th>
          Active
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @routines.each do |routine| %>
      <tr>
        <td>
          <%= routine.id %>
        </td>

        <td>
          <% if routine.customer.present? %>
            <a href="/customers/<%= routine.customer.id %>">
              <%= routine.customer.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= routine.active %>
        </td>

        <td>
          <%= time_ago_in_words(routine.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(routine.updated_at) %> ago
        </td>

        <td>
          <a href="/routines/<%= routine.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @routines, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
